@model IEnumerable<NotesApp.Models.Note>

@{
    ViewData["Title"] = "Notes";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">My Notes</h1>
        </div>
    </div>

    <!-- Show message if no notes exist -->
    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No notes yet!</h4>
            <p>Start by creating your first note.</p>
        </div>
    }
    else
    {
        <!-- Display all notes in a grid -->
        <div class="row">
            @foreach (var note in Model)
            {
                var priorityClass = note.Priority switch
                {
                    NotesApp.Models.Priority.Low => "border-success",
                    NotesApp.Models.Priority.Medium => "border-warning",
                    NotesApp.Models.Priority.High => "border-danger",
                    _ => "border-secondary"
                };

                var priorityBadge = note.Priority switch
                {
                    NotesApp.Models.Priority.Low => "bg-success",
                    NotesApp.Models.Priority.Medium => "bg-warning",
                    NotesApp.Models.Priority.High => "bg-danger",
                    _ => "bg-secondary"
                };

                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 @priorityClass border-3 shadow-sm note-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <span class="badge @priorityBadge">@note.Priority Priority</span>
                            <small class="text-muted">@note.CreatedAt.ToString("MMM dd, yyyy")</small>
                        </div>
                        
                        <!-- Card Body: Title and content -->
                        <div class="card-body">
                            <h5 class="card-title">@note.Title</h5>
                            <p class="card-text">@note.Content</p>
                            
                            <!-- Show update time if note was edited -->
                            @if (note.UpdatedAt.HasValue)
                            {
                                <small class="text-muted">
                                    <em>Updated: @note.UpdatedAt.Value.ToString("MMM dd, yyyy HH:mm")</em>
                                </small>
                            }
                        </div>
                        
                        <!-- Card Footer: Edit and Delete buttons -->
                        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                            <!-- Edit button -->
                            <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            
                            <!-- Delete button with confirmation -->
                            <form asp-action="Delete" asp-route-id="@note.Id" method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to delete this note?');">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Custom CSS for card hover effect and text truncation -->
@section Styles {
    <style>
        /* Add smooth animation when hovering over note cards */
        .note-card {
            transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
        }

        /* Lift card up slightly on hover */
        .note-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }

        /* Limit note content to 6 lines with ellipsis */
        .card-text {
            max-height: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 6;
            -webkit-box-orient: vertical;
        }
    </style>
}

